<Window
	x:Class="TxEditor.View.TextKeyWizardWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:c="clr-namespace:TxEditor.Converters"
	xmlns:my="clr-namespace:TxEditor"
	mc:Ignorable="d" 
	d:DesignHeight="300" d:DesignWidth="500"
	ResizeMode="NoResize"
	ShowInTaskbar="True"
	WindowStyle="SingleBorderWindow"
	TextOptions.TextFormattingMode="Display"
	Icon="/Images/TxFlag.ico"
	Title="TxEditor wizard"
	Loaded="Window_Loaded"
	SizeToContent="WidthAndHeight"
	LocationChanged="Window_LocationChanged">
	<Window.Resources>
		<c:MonospaceFontConverter x:Key="monospaceFontConverter"/>
	</Window.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="400" />
		</Grid.ColumnDefinitions>

		<Grid Grid.Row="0" Margin="10">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			
			<TextBlock
				Grid.Row="0" Grid.Column="0"
				VerticalAlignment="Center"
				Text="Text key:"/>
			<TextBox
				Name="TextKeyText"
				Grid.Row="0" Grid.Column="1"
				Margin="8,0,0,0"/>

			<TextBlock
				Grid.Row="1" Grid.Column="0"
				Margin="0,4,0,0" VerticalAlignment="Center"
				Text="Translated text:"/>
			<my:DecoratedTextBox
				x:Name="TranslationText"
				Grid.Row="1" Grid.Column="1"
				InnerBorderThickness="1" InnerPadding="1" Margin="8,4,0,0"
				PlaceholderText="Enter text"
				ValidateKey="DecoratedTextBox_ValidateKey"/>
		</Grid>

		<Rectangle
			Grid.Row="1"
			Fill="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
		<Border
			Grid.Row="1"
			BorderBrush="#12000000"
			BorderThickness="0,1,0,0"/>
		<StackPanel
			Grid.Row="1"
			Margin="10" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Name="OKButton" Padding="12,1" MinWidth="75" Content="Save text" Click="OKButton_Click" IsDefault="True" />
			<Button Margin="8,0,0,0" Padding="12,1" MinWidth="75" Content="Cancel" Click="CancelButton_Click" IsCancel="True" />
		</StackPanel>
	</Grid>
</Window>
